@model IEnumerable<OrderTrackingSystem.Models.Order>

@{
    ViewData["Title"] = "訂單清單";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center rounded-top-4 py-3">
            <h3 class="mb-0">📦 訂單清單</h3>
        </div>

        <div class="card-body bg-light rounded-bottom-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="text-secondary mb-0">共 @Model.Count() 筆資料</h5>
                <a asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> 新增訂單
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle bg-white border rounded-3 shadow-sm">
                    <thead class="table-primary text-center">
                        <tr>
                            <th>訂單編號</th>
                            <th>客戶姓名</th>
                            <th>電話</th>
                            <th>電子郵件</th>
                            <th>訂單日期</th>
                            <th>金額</th>
                            <th>狀態</th>
                            <th>付款方式</th>
                            <th>送貨地址</th>
                            <th>備註</th>
                            <th>建立時間</th>
                            <th>更新時間</th>
                            <th style="width: 200px;">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center fw-bold">@Html.DisplayFor(modelItem => item.OrderNo)</td>
                                <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
                                <td>@Html.DisplayFor(modelItem => item.CustomerPhone)</td>
                                <td>@Html.DisplayFor(modelItem => item.CustomerEmail)</td>
                                <td class="text-center">@Html.DisplayFor(modelItem => item.OrderDate)</td>
                                <td class="text-end text-danger fw-bold">@Html.DisplayFor(modelItem => item.TotalAmount)</td>
                                <td class="text-center">@Html.DisplayFor(modelItem => item.OrderStatus)</td>
                                <td class="text-center">@Html.DisplayFor(modelItem => item.PaymentMethod)</td>
                                <td>@Html.DisplayFor(modelItem => item.ShippingAddress)</td>
                                <td>@Html.DisplayFor(modelItem => item.Remark)</td>
                                <td>@Html.DisplayFor(modelItem => item.CreateTime)</td>
                                <td>@Html.DisplayFor(modelItem => item.UpdateTime)</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.OrderId" class="btn btn-sm btn-warning me-1" data-bs-toggle="tooltip" data-bs-title="編輯訂單">
                                        <i class="bi bi-pencil-square"></i> 編輯
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-sm btn-info text-white me-1" data-bs-toggle="tooltip" data-bs-title="檢視詳細資料">
                                        <i class="bi bi-eye"></i> 詳細
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.OrderId" class="btn btn-sm btn-danger" data-bs-toggle="tooltip" data-bs-title="刪除此訂單">
                                        <i class="bi bi-trash3"></i> 刪除
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
